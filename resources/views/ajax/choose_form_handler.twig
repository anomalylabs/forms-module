<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_form_handler') }}</h4>
</div>

<div class="modal-body">
    <ul class="nav nav-stacked">
        {% for extension in extensions %}
            <li>
                <a href="{{ url_to('admin/forms/create?handler=' ~ extension.namespace) }}">
                    <strong>{{ trans(extension.getTitle()) }}</strong>
                    <br>
                    <small>{{ trans(extension.getDescription()) }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
